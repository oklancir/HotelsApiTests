@model Hotels.Models.Reservation
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(model => model.StartDate)
        @Html.TextBoxFor(model => model.StartDate, new { Class = "form-control" })
        @Html.ValidationMessageFor(model => model.StartDate)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.EndDate)
        @Html.TextBoxFor(model => model.EndDate, new { Class = "form-control" })
        @Html.ValidationMessageFor(model => model.EndDate)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.ReservationStatus.Name)
        @Html.TextBoxFor(model => model.ReservationStatus.Name, new { Class = "form-control" })
        @Html.ValidationMessageFor(model => model.ReservationStatus.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Guest.Email)
        @Html.TextBoxFor(model => model.Guest.Email, new { Class = "form-control" })
        @Html.ValidationMessageFor(model => model.Guest.Email)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Guest.PhoneNumber)
        @Html.TextBoxFor(model => model.Guest.PhoneNumber, new { Class = "form-control" })
        @Html.ValidationMessageFor(model => model.Guest.Email)
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
}
